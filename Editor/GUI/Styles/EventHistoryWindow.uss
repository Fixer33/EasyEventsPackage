#event-history__header {
    -unity-text-align: middle-center;
    font-size: 16px;
}

#event-history__header-divider {
    height: 3px;
    background-color: white;
    margin-bottom: 3px;
}

EventPreviewElement {
    height: 30px;
    width: 100%;
    flex-grow: 1;
    margin-bottom: 2px;
    margin-top: 1px;
    transition-duration: 0.1s;
    transition-property: all;
    border-color: white;
    border-width: 0;
    border-bottom-width: 1px;
    border-radius: 1px;
    flex-direction: row;
}

