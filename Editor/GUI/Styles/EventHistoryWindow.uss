EventPreviewElement #event-preview__header {
    flex-grow: 1;
    -unity-text-align: middle-left;
    padding-left: 5px;
    color: white;
}

EventPreviewElement #event-preview__view-details-btn {
    width: 100px;
    height: 95%;
    margin: 0;
    margin-right: 3px;
    padding: 0;
    background-color: rgba(255,255,255,0);
    border-color: white;
    border-radius: 3px;
    border-width: 1px;
    color: white;
}

EventPreviewElement #event-preview__view-details-btn:hover {
    background-color: rgba(255,255,255,0.11);
}

EventPreviewElement #event-preview__view-details-btn:active {
    scale: 0.9 0.9;
}